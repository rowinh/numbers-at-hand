{
  "manifest_version": 2,

  "name": "To Google Translate",
  "description": "Highlight text on a web page and send it to Google Translate or listen the pronunciation",
  "version": "1.9",
  "default_locale": "en",

  "browser_action": {
    "default_icon": {
      "16": "icons/Icon-16.png",
      "32": "icons/Icon-32.png",
      "48": "icons/Icon-48.png",
      "128": "icons/Icon-128.png"
    },
    "default_popup": "popup.html",
    "default_title": "__MSG_extensionhovertext__"
  },
  "permissions": ["storage", "contextMenus", "activeTab"],
  "background": {
    "scripts": ["js/common.js", "js/background.js"]
  },
  "icons": {
    "16": "icons/Icon-16.png",
    "32": "icons/Icon-32.png",
    "48": "icons/Icon-48.png",
    "128": "icons/Icon-128.png"
  },
  "browser_specific_settings": {
		"gecko": {
			"id": "numbers@hand.com",
			"strict_min_version": "48.0"
		}
	},
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://www.google-analytics.com https://www.googletagmanager.com ; object-src 'self'"
}
